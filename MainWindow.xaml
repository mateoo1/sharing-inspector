<Window x:Class="Sharing_Inspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sharing_Inspector"
        mc:Ignorable="d"
        Title="Sharing Inspector" Height="550" Width="1000"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Background="#1F1F2D">

<!-- Custom scrollbar example derive from:
    https://github.com/Abel13/CustomScrollbar/blob/master/Scrollbar/MainWindow.xaml -->

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid x:Name="Grid">
                                <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" 
                                           Height="Auto" Fill="Transparent"/>
                                <Border x:Name="Rectangle1" CornerRadius="0 0 0 0" HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch" Width="Auto" Height="Auto" 
                                        Background="{TemplateBinding Background}"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Tag" Value="Horizontal">
                                    <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                    <Setter TargetName="Rectangle1" Property="Height" Value="7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--SCROLLBARS-->
            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                <Setter Property="Foreground" Value="#2daeb9"/>
                <Setter Property="Background" Value="DarkGray"/>
                <Setter Property="Width" Value="7"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Width="7" Background="{x:Null}">
                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                    <Track.Thumb>
                                        <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" 
                                               Style="{DynamicResource ScrollThumbs}"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                    <Setter Value="{DynamicResource ButtonSelectBrush}" 
                                            TargetName="Thumb" Property="Background"/>
                                </Trigger>
                                <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                    <Setter Value="{DynamicResource DarkBrush}" TargetName="Thumb" Property="Background"/>
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter TargetName="GridRoot" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="PART_Track" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Width" Value="Auto"/>
                                    <Setter Property="Height" Value="12"/>
                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                    <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--https://stackoverflow.com/questions/12373248/annoying-square-where-scrollbars-meet-->
            <Style TargetType="{x:Type ScrollViewer}">
                <Style.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
<!-- End of snippets -->

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#181730" 
              Grid.ColumnSpan="2"
              MouseDown="Grid_Drag">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sharing Inspector"
                       Foreground="#FFFFFF"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Bold"
                       FontWeight="Bold"
                       FontSize="16"/>

            <Button Grid.Column="9" 
                    Name="MinimizeButton" 
                    Content="-"
                    Foreground="#FFFFFF"
                    FontSize="10"
                    FontFamily="Fonts/#Lato-Regular"
                    FontWeight="Medium"
                    Margin="20,10,1,10"
                    BorderThickness="0"
                    Click="MinimizeButton_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2daeb9"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3FBCC7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="3"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button Grid.Column="10" 
                    Name="CloseButton" 
                    Content="X"
                    Foreground="#FFFFFF"
                    FontSize="10"
                    FontFamily="Fonts/#Lato-Regular"
                    FontWeight="Medium"
                    Margin="3,10,20,10"
                    BorderThickness="0"
                    Click="CloseButton_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#e35948"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEC7061"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="3"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                
            </Button>

        </Grid>

        <!-- Settings Column -->


        <StackPanel Grid.Row="1">

            <StackPanel Orientation="Horizontal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">

            <Image Source="Images/gears-color.png"
                   VerticalAlignment="Center"
                   Margin="10"/>


            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        Margin="10,20,10,10">

                <TextBlock Text="Domain"
                       Width="80"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="5,0,15,0"/>

                <TextBox x:Name="domain" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="12"
                       Width="300"
                       Background="#1F1F2D"
                       Foreground="#CFCFCF"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        Margin="10,0,10,10">
                <TextBlock Text="Prefix"
                       Width="80"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="5,0,15,0"/>

                <TextBox x:Name="domainPrefix" 
                       
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="12"
                       Width="300"
                       Background="#1F1F2D"
                       Foreground="#CFCFCF"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        Margin="10,0,10,10">
                
                <TextBlock Text="Container"
                       Width="80"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="5,0,15,0"/>

                <TextBox x:Name="ContainerPath" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="12"
                       Width="300"
                       Background="#1F1F2D"
                       Foreground="#CFCFCF"/>

                
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        Margin="10,10,10,10">
                
                <TextBlock Text="Include all subfolders"
                       Width="125"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="5,0,15,0"/>
                
                <CheckBox x:Name="Subfolders" 
                          Click="checkAccountStatus_click"/>
            </StackPanel>


            <!-- Select Directories-->

            <StackPanel Orientation="Horizontal">


            </StackPanel>

            <StackPanel Orientation="Vertical"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left">
                <TextBox x:Name="Folders"
                   Height="160"
                   Width="400"
                   ScrollViewer.HorizontalScrollBarVisibility="Auto"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   AcceptsReturn="True"
                   Background="#1F1F2D"
                   Foreground="#cfcfcf"
                   FontFamily="Fonts/#Lato-Regular"
                   Margin="10,10,10,0"/>



                <Button x:Name="addFolderButton"
                        HorizontalAlignment="Left"
                        Content="Browse" 
                        Click="addFolderButton_Click"
                        Foreground="#FFFFFF"
                        Margin="10,10,10,10">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Bold"/>
                            <Setter Property="Background" Value="#e35948"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD63926"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="25"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                
            </StackPanel>
            
            

        </StackPanel>
        
        
        <!-- Inspect Column-->

        <StackPanel Grid.Column="1"
              Grid.Row="2"
              Margin="10,10,10,10">

            <Image Source="Images/looking-glass.png"
                   VerticalAlignment="Center"
                   Height="80"
                   Width="83"/>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="submitButton" 
                        Content="Inspect" 
                        Click="submitButton_Click"
                        Margin="10,10,10,10"
                        Foreground="#FFFFFF">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Regular"/>
                            <Setter Property="Background" Value="#e35948"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD63926"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25"
                                    CornerRadius="7"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <TextBlock x:Name="Progress"
                       Text=""
                       Width="175"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="5,0,15,0"/>

            </StackPanel>

            <!--OUTPUT-->
            <TextBox x:Name="accessData"
                 Height="270"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 FontSize="11.5" 
                 Background="#1F1F2D"
                 Foreground="#CFCFCF"
                 FontFamily="Fonts/#Lato-Regular">
            </TextBox>


            <StackPanel Orientation="Horizontal">

                <Button x:Name="CSV" 
                        Content="CSV" 
                        Click="CSV_Click"
                        Foreground="#FFFFFF"
                        Margin="10,10,10,10">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Bold"/>
                            <Setter Property="Background" Value="#e35948"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD63926"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="25"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button x:Name="JSON" 
                        Content="JSON" 
                        Click="JSON_Click"
                        Foreground="#FFFFFF"
                        Margin="10,10,10,10">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Bold"/>
                            <Setter Property="Background" Value="#e35948"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD63926"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="25"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    
                </Button>

                <Button x:Name="XML" 
                        Content="XML" 
                        Click="XML_Click"
                        Foreground="#FFFFFF"
                        Margin="10,10,10,10">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Bold"/>
                            <Setter Property="Background" Value="#e35948"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD63926"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="25"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <Button x:Name="Clear" 
                        Content="Clear" 
                        Click="Clear_Click"
                        Foreground="#FFFFFF"
                        Margin="10,10,10,10">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Lato-Bold"/>
                            <Setter Property="Background" Value="#2daeb9"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3FBCC7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="80" Height="25"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <TextBlock x:Name="Saved"
                       Text=""
                       Width="300"
                       Foreground="#FFFFFF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Fonts/#Lato-Regular"
                       FontWeight="Light"
                       FontSize="14"
                       Margin="10,10,10,10"/>
        </StackPanel>
    </Grid>
</Window>
